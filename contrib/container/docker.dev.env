# InvenTree environment variables for a development setup
# These variables will be used by the docker-compose.yml file

# Server IP address (used for CORS and frontend/backend communication)
# Note: This should match SERVER_IP in .env file for docker-compose variable substitution
SERVER_IP=localhost
INVENTREE_SITE_URL=http://localhost:8000

# Set DEBUG to True for a development setup
INVENTREE_DEBUG=True
INVENTREE_LOG_LEVEL=WARNING
INVENTREE_DB_LOGGING=False

# Database configuration options
# Note: The example setup is for a PostgreSQL database (change as required)
INVENTREE_DB_ENGINE=postgresql
INVENTREE_DB_NAME=inventree
INVENTREE_DB_HOST=inventree-dev-db
INVENTREE_DB_PORT=5432
INVENTREE_DB_USER=pguser
INVENTREE_DB_PASSWORD=pgpassword

# Enable custom plugins?
INVENTREE_PLUGINS_ENABLED=True

# Auto run migrations?
INVENTREE_AUTO_UPDATE=True

# Admin user configuration
# These credentials will be used to create an admin user on first startup
# The user will be created as a superuser with full access to the system
INVENTREE_ADMIN_USER=admin
INVENTREE_ADMIN_EMAIL=admin@startcomputer.com
INVENTREE_ADMIN_PASSWORD=inventree
